            // this is a traverse operation
            if (!(p.Length == 0)) {
                link = symbolicLink + SbUtils.PathString(p);
                return false;
            }
            link = symbolicLink;
            return true;
        }

        public override bool QueryACL(StringBuilder! p,
                                      bool effective,
