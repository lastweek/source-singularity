        public override bool DeleteDirectory(StringBuilder! p,
                                        Principal pr,
                                        int curpos,
                                        out int position,
                                        out bool linkFound,
                                        out ErrorCode error,
                                        out bool reparse,
                                        out string link
                                        )
        {
            reparse = true;
            linkFound = true;
            error = ErrorCode.NoError;
            position = curpos;

            if (!(p.Length == 0)) {
