            position = curpos;
            //DebugStub.Break();
            reparse = true;
            linkFound = true;
            link = null;
            error = ErrorCode.NoError;

            if (!(p.Length == 0))
                link = symbolicLink + SbUtils.PathString(p);
            else
                link = symbolicLink ;

            return false;
     }
