        public static Decimal operator ++(Decimal d);
        public static Decimal operator --(Decimal d);
        public static Decimal operator +(Decimal d1, Decimal d2);
        public static Decimal operator -(Decimal d1, Decimal d2);
        public static Decimal operator *(Decimal d1, Decimal d2);
        public static Decimal operator /(Decimal d1, Decimal d2);
        public static Decimal operator %(Decimal d1, Decimal d2);

