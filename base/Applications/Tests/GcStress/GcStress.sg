                    bool ok = SdsUtils.Bind(StressContract.ModuleName, epNS, exp, out errorOut);
                    if (!ok) {
                        Console.Write("failure on lookup of name " + StressContract.ModuleName
                                      + "reason: " + SdsUtils.ErrorCodeToString(errorOut));
                    delete imp;
